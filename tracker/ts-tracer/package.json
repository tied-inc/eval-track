{
  "name": "ts-tracer",
  "version": "1.0.0",
  "description": "TypeScript implementation of eval-track tracer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "prepare-lint": "biome install && lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome format",
      "biome check",
      "git add"
    ]
  },
  "dependencies": {
    "ulid": "^2.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
